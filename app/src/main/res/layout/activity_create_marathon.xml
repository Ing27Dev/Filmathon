<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_marathon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create.CreateMarathonActivity">

    <ImageButton
        android:id="@+id/btnAtras"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        android:background="@null"
        app:tint="@color/filmathon_orange"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@id/tvTitulo"
        android:text="@string/crear_maraton"
        android:textSize="24sp"
        android:fontFamily="@font/QuicksandBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"/>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:text="@string/subtitle_new_marathon"
        android:fontFamily="@font/QuicksandRegular"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvGenero"
        android:text="@string/genero"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Spinner
        android:id="@+id/spinnerGenero"
        android:background="@drawable/input_background"
        android:minHeight="48dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/tvGenero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvDuracion"
        android:text="@string/duracion"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerGenero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <SeekBar
        android:id="@+id/seekBarDuracion"
        android:thumbTint="@color/filmathon_orange"
        android:progressTint="@color/filmathon_yellow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@id/tvDuracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvMin"
        android:text="@string/min_hours"
        android:fontFamily="@font/QuicksandMedium"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDuracion"
        app:layout_constraintEnd_toStartOf="@id/seekBarDuracion"/>

    <TextView
        android:id="@+id/tvMax"
        android:text="@string/max_hours"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandMedium"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDuracion"
        app:layout_constraintStart_toEndOf="@id/seekBarDuracion"/>

    <TextView
        android:id="@+id/tvAnyo"
        android:text="@string/anyo"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekBarDuracion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Spinner
        android:id="@+id/spinnerAnyo"
        android:background="@drawable/input_background"
        android:minHeight="48dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/tvAnyo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTematica"
        android:text="@string/tematica"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerAnyo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etTematica"
        android:background="@drawable/input_background"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:hint="@string/escribe_un_tema"
        android:fontFamily="@font/QuicksandRegular"
        android:minHeight="48dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintWidth_percent="0.7"/>

    <TextView
        android:id="@+id/tvPlataforma"
        android:text="@string/plataforma"
        android:textSize="20sp"
        android:fontFamily="@font/QuicksandRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etTematica"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Spinner
        android:minHeight="48dp"
        android:id="@+id/spinnerPlataforma"
        android:background="@drawable/input_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/tvPlataforma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnCrearMaraton"
        android:text="@string/iniciar"
        style="@style/FilmathonButton"
        app:backgroundTint="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinnerPlataforma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintWidth_percent="0.6"/>

    <ImageView
        android:id="@+id/logoMini"
        android:src="@drawable/logo"
        android:contentDescription="@string/logo_filmathon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>